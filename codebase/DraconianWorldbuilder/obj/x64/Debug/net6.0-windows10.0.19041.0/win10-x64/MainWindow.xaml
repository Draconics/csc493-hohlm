<Window
    x:Class="DraconianWorldbuilder.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DraconianWorldbuilder"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <RelativePanel x:ConnectionId='2' Name="bigPanel" HorizontalAlignment="Stretch">
        <StackPanel x:ConnectionId='3' Name="stackPanel" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top" Width="800"
                    RelativePanel.AlignHorizontalCenterWithPanel="True">
            <TextBox x:ConnectionId='11' Name="TitleBox" Header="Article Title:" PlaceholderText="Type your article title here"/>
            <TextBox x:ConnectionId='12' Name="SummaryBox"  Header="Summary:" PlaceholderText="Type your summary here"
                     Height="100" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"/>

            <RelativePanel HorizontalAlignment="Stretch">
                <RelativePanel.Resources>
                    <Style TargetType="AppBarButton">
                        <Setter Property="IsCompact" Value="True"/>
                    </Style>
                </RelativePanel.Resources>

                <AppBarButton x:ConnectionId='14' x:Name="openFileButton" Icon="OpenFile"                          
                              ToolTipService.ToolTip="Open file"/>
                <AppBarButton x:ConnectionId='15' x:Name="saveFileButton" Icon="Save"                          
                              ToolTipService.ToolTip="Save file" RelativePanel.RightOf="openFileButton" Margin="8,0,0,0"/>
                <AppBarButton x:ConnectionId='16' x:Name="linkButton" Icon="Link"                          
                              ToolTipService.ToolTip="Link file" RelativePanel.RightOf="saveFileButton" Margin="0,0,8,0"/>

                <AppBarButton x:ConnectionId='17' x:Name="boldButton" Icon="Bold"                         
                              ToolTipService.ToolTip="Bold" RelativePanel.LeftOf="italicButton" Margin="0,0,8,0"/>
                <AppBarButton x:ConnectionId='18' x:Name="italicButton" Icon="Italic"                           
                              ToolTipService.ToolTip="Italic" RelativePanel.LeftOf="underlineButton" Margin="0,0,8,0"/>
                <AppBarButton x:ConnectionId='19' x:Name="underlineButton" Icon="Underline"                              
                              ToolTipService.ToolTip="Underline" RelativePanel.AlignRightWithPanel="True"/>

            </RelativePanel>
            <RichEditBox x:ConnectionId='13' x:Name="editor" Height="450" RelativePanel.Below="openFileButton"
                         RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True"/>

        </StackPanel>
        <StackPanel x:ConnectionId='4' x:Name="sidePanel" RelativePanel.RightOf="stackPanel" Margin="8,32,0,0">
            <RichTextBlock x:ConnectionId='5' x:Name="ecoBox" TextWrapping="Wrap">
                <Paragraph>
                    Economics Overview:
                </Paragraph>
            </RichTextBlock>
            <StackPanel Orientation="Horizontal" Height="50">
                <TextBox x:ConnectionId='8' x:Name="TagBox" PlaceholderText="Tag name" Width="100" IsReadOnly="True"/>
                <TextBox x:ConnectionId='9' x:Name="MultiBox" PlaceholderText="1.0" Width="5" IsReadOnly="True"/>
                <AppBarButton x:ConnectionId='10' x:Name="ecoButton" Icon="SetLockScreen"                         
                              ToolTipService.ToolTip="(Un)lock tags"/>
            </StackPanel>
            
            <RichTextBlock x:ConnectionId='6' x:Name="linkList" TextWrapping="Wrap">
                <Paragraph>
                    Linked Files:
                </Paragraph>
            </RichTextBlock>
            <StackPanel x:ConnectionId='7' x:Name="linkButtonList"></StackPanel>
        </StackPanel>
    </RelativePanel>
</Window>

